<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <% if product.image.present? %>
    <div class="card-image">
      <figure class="image">
        <%= image_tag product.image %>
      </figure>
    </div>
  <% end %>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>On sale price:</strong>
    <%= product.on_sale_price %>
  </p>

</div>
