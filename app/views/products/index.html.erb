<div id="product-grid">
  <% @products.each do |product| %>
    <aside>
      <div>
        <% if product.image.present? %>
          <p><%= image_tag product.image.variant(resize_to_limit: [250, 250]).processed %></p>
        <% end %>
      </div>
      <div>
        <p><%= link_to product.name, product %></p>
        <p>Price: <%= product.price %></p>
      </div>
    </aside>
  <% end %>
</div>
<div>
  <%= paginate @products %>
</div>